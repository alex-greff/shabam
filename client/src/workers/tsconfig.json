{
    "compilerOptions": {
        "strict": true,
        "baseUrl": "../../",
        "paths": {
            "@/*": ["src/*"],
            "@WASM/*": ["src/wasm/build/*"]
        },
        "experimentalDecorators": true,
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "webworker",
            "esnext"
        ],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "sourceMap": true,
        "allowJs": false,
    }
}