{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
    "type-overrides/**/*.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules"
  ]
}